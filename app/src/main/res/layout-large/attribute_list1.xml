<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/billLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#ffffff">



            <LinearLayout
                android:id="@+id/qty_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/tv_itemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/keypadDialogheader"
                    android:ems="10"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="ADD NEW CUSTOMER"
                    android:textColor="#fff"
                    android:textSize="16sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_below="@+id/qty_view"
                android:layout_margin="5dp"
                android:weightSum="1">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:hint="SEARCH CUSTOMER" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etSearchType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:hint="SEARCH BY" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/llHeader"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linearL3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/lvCustomers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearL4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="#5D6D7E">

                <Button
                    android:id="@+id/cuOk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="OK"
                    android:textColor="#000" />


                <Button
                    android:id="@+id/cuCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="CANCEL"
                    android:textColor="#000" />


            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>