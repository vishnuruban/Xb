<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/customerscrren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="4dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="Bill Number :"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/cBillNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="15sp" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:gravity="center"
                        android:text="Date :"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearL2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/darkskyBlue"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.75"
                        android:gravity="center"
                        android:text="Desc"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Qty"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:text="Rate"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.25"
                        android:gravity="center"
                        android:text="Amount"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="4dp">

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:divider="@null"
                    android:nestedScrollingEnabled="true" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/bgedittext2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cTotalProducts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="Products"
                        android:textColor="#000"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/cTotalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="15dp"
                        android:text="Price(\u20B9)"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Discount"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/discount_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_outline"
                    android:checkedButton="@+id/rupees"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rupees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="\u20B9"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/percentage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </RadioGroup>

                <EditText
                    android:id="@+id/cDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:textSize="15dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="4dp">

                <LinearLayout
                    android:id="@+id/layout_Net"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">



                    <TextView
                        android:id="@+id/cTNetamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:padding="8dp"
                        android:text="Grand Total(\u20B9)"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cNetamount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:padding="8dp"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000" />




            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="12dp"
                    android:text="Customer Name"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/cCustname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <LinearLayout
                android:id="@+id/cashierLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Cashier Name"
                    android:textColor="@color/colorCell"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/cCashiername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Payment mode"
                    android:textColor="@color/colorCell"
                    android:textSize="15sp" />


                <com.reginald.editspinner.EditSpinner
                    android:id="@+id/cPaymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Cash(\u20B9)"
                    android:textColor="@color/colorCell"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/cCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:maxLength="12"
                    android:padding="12dp"
                    android:text=''
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />


            <LinearLayout
                android:id="@+id/layoutBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cBalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="Balance "
                    android:textColor="@color/dark_orange"
                    android:textSize="18sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/cPrintstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_one"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_two"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_three"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_four"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_five"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_six"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_seven"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_eight"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn_nine"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_zero"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_point"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="."
                    android:textColor="#fff"
                    android:textSize="30sp" />


                <Button
                    android:id="@+id/btn_clear"
                    android:layout_columnSpan="1"
                    android:layout_margin="4dp"
                    android:background="@color/keypad_colour"
                    android:text="C"
                    android:textColor="#fff"
                    android:textSize="30sp" />


            </GridLayout>

            <Button
                android:id="@+id/cSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:background="@color/ltSkyBlue"
                android:gravity="center"
                android:text="SAVE BILL"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/chkButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">


                <Button
                    android:id="@+id/cPrint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/ok"
                    android:text="PRINT BILL"
                    android:textColor="#fff"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/cCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#FF5252"
                    android:text="CANCEL"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</ScrollView>