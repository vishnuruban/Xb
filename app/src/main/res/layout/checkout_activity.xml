<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgedittext2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cTotalProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Products"
                    android:textColor="#000"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/cTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="15dp"
                    android:text="Price(\u20B9)"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="15dp"
                    android:text="Discount"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/discount_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_outline"
                    android:layout_margin="10dp"
                    android:checkedButton="@+id/offer"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rupees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:text="\u20B9"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/percentage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"

                        android:padding="5dp"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </RadioGroup>


                <EditText
                    android:id="@+id/cDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:textSize="15dp"

                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />


            <LinearLayout
                android:id="@+id/layout_Net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button_shape"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/net"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="Net Amount (\u20B9) "
                    android:textColor="#fff"
                    android:textSize="17dp" />


                <TextView
                    android:id="@+id/cNetamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="15dp"
                    android:text=" "
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_menu"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/customerscrren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="1">


                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_edittext1"
                    android:drawableLeft="@mipmap/ic_account_box_white_24dp"
                    android:drawablePadding="15dp"
                    android:hint="Customer Name"
                    android:padding="16dp"
                    android:textColorHint="#F6F6F6" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/bg_edittext1"
                    android:drawablePadding="15dp"
                    android:hint="Date"
                    android:padding="16dp"
                    android:textColor="#fff"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearL2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/dark_brown">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Desc"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Qty"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Rate"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Amount"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:columnCount="5"
                android:orientation="horizontal"
                android:padding="5dp">


                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="."
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="CLEAR"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="100"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="500"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="1000"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="CASH"
                    android:textColor="#fff"
                    android:textSize="20dp" />


                <Button
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="DC"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="CC"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorCell"
                    android:text="WALLET"
                    android:textColor="#fff"
                    android:textSize="20dp" />


            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/grid"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:orientation="horizontal">

                <TextView
                    android:id = "@+id/cPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="PAYMENT"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="15dp"
                    android:text="Net Amount(\u20B9)"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:textColor="#000"
                    android:padding="15dp"
                    android:text='\u20B9'
                    android:textSize="12dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="12dp"
                    android:text="Payment mode"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:textColor="#000"
                    android:padding="12dp"
                    android:text=''
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Cash(\u20B9)"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:textColor="#000"
                    android:padding="12dp"
                    android:text=''
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Mobile Number"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:textColor="#000"
                    android:padding="12dp"
                    android:text=''
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <Button
                    android:id="@+id/mSave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#0091EA"
                    android:padding="16dp"
                    android:text="SAVE"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mPrint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#1B5E20"
                    android:padding="16dp"
                    android:text="PRINT"
                    android:textColor="#fff"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/mCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FF5252"
                    android:padding="16dp"
                    android:text="CANCEL"
                    android:textColor="#fff"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>