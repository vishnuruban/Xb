<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:background="#F5F5F5"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"

            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgedittext2"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cTotalProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Products"
                    android:textColor="#000"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/cTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="15dp"
                    android:text="Price(\u20B9)"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Discount"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />

                <RadioGroup
                    android:id="@+id/discount_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_outline"
                    android:layout_margin="10dp"
                    android:checkedButton="@+id/rupees"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rupees"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:padding="5dp"
                        android:gravity="center"
                        android:text="\u20B9"
                        android:checked="true"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/percentage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/toggle_widget_background"
                        android:button="@null"
                        android:padding="5dp"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="15dp" />
                </RadioGroup>


                <EditText
                    android:id="@+id/cDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="15dp"
                    android:textColor="#000"
                    android:textSize="15dp"

                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#000" />


            <LinearLayout
                android:id="@+id/layout_Net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:weightSum="1"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/cTNetamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:paddingEnd="2dp"

                    android:padding="10dp"
                    android:text="Grand Total(\u20B9)"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/cNetamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:paddingEnd="2dp"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text=" "
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_menu"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/customerscrren"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:weightSum="1">



                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawablePadding="15dp"
                    android:text="Bill Number :"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/cBillNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawablePadding="15dp"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="18sp" />


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawablePadding="15dp"
                    android:text="Date :"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:drawablePadding="15dp"
                    android:text="18-12-2017"
                    android:padding="5dp"
                    android:gravity="left"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="18sp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/linearL2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/darkskyBlue">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.75"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Desc"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Qty"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Rate"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Amount"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/a1">


            <GridLayout
                android:layout_width="640dp"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">


                <TextView
                    android:id="@+id/cPrintstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="3"
                    android:gravity="right"
                    android:text="prini status" />

                <Button
                    android:id="@+id/btn_one"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="1"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_two"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="2"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_three"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="3"
                    android:layout_columnSpan="1"
                    android:textColor="#fff"
                    android:textSize="30dp" />



                <Button
                    android:id="@+id/btn_four"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="4"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_five"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="5"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_six"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="6"
                    android:layout_columnSpan="1"
                    android:textColor="#fff"
                    android:textSize="30dp" />



                <Button
                    android:id="@+id/btn_seven"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="7"
                    android:layout_columnSpan="1"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_eight"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="8"
                    android:layout_columnSpan="1"
                    android:layout_gravity="fill"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/btn_nine"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:layout_columnSpan="1"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="30dp" />



                <Button
                    android:id="@+id/btn_zero"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="0"
                    android:layout_columnSpan="1"
                    android:textColor="#fff"
                    android:textSize="30dp" />


                <Button
                    android:id="@+id/btn_point"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/keypad_colour"
                    android:text="."
                    android:layout_columnSpan="1"
                    android:textColor="#fff"
                    android:textSize="30dp" />



                <Button
                    android:id="@+id/btn_clear"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_columnSpan="1"
                    android:text="C"
                    android:background="@color/keypad_colour"
                    android:textColor="#fff"
                    android:textSize="30dp" />


            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="12dp"
                    android:text="Customer Name"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/cCustname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cashierLayout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="12dp"
                    android:text="Cashier Name"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/cCashiername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="12dp"
                    android:text="Payment mode"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <com.reginald.editspinner.EditSpinner
                    android:id="@+id/cPaymentMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="15dp"
                    android:text="Cash(\u20B9)"
                    android:textColor="@color/colorCell"
                    android:textSize="15dp" />


                <EditText
                    android:id="@+id/cCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/checkout_edittext"
                    android:maxLength="12"
                    android:padding="12dp"
                    android:text=''
                    android:textColor="#000"
                    android:textSize="15dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#fff" />

            <LinearLayout
                android:id="@+id/layoutBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Balance "
                    android:textColor="@color/dark_orange"
                    android:textSize="20dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chkButtons"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@color/ltSkyBlue"
                android:gravity="center"
                android:padding="10dp"
                android:text="SAVE BILL"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/chkButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">


            <Button
                android:id="@+id/cPrint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@color/ok"
                android:text="PRINT BILL"
                android:textColor="#fff"
                android:textSize="20dp" />


            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.1" />


            <Button
                android:id="@+id/cCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#FF5252"
                android:text="CANCEL"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>